{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es6", "es2019"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
